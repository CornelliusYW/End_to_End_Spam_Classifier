import airflow
from airflow import DAG
from airflow.providers.docker.operators.docker import DockerOperator
from datetime import datetime, timedelta

# Define default arguments for the DAG
default_args = {
    'owner': 'airflow',
    'depends_on_past': False,
    'start_date': datetime(2023, 1, 7),  # Set this to a recent date
    'email_on_failure': False,
    'email_on_retry': False,
    'retries': 1,
    'retry_delay': timedelta(minutes=5),
}

# Define the DAG
dag = DAG(
    'docker_hello_world',
    default_args=default_args,
    description='A simple test DAG to run a Docker hello-world container',
    schedule_interval=timedelta(days=1),  # Daily for testing purposes
    catchup=False
)

# Define the DockerOperator task
docker_task = DockerOperator(
    task_id='docker_hello_world_task',
    image='hello-world',  # Name of the Docker image on Docker Hub
    api_version='auto',
    auto_remove=True,
    docker_url="unix://var/run/docker.sock",  # URL to Docker daemon
    network_mode="bridge",
    dag=dag
)

# Set the task in the DAG
docker_task
